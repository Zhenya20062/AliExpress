<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingVertical="20dp"
    android:paddingStart="30dp"
    android:paddingEnd="12dp">

    <com.google.android.material.button.MaterialButton
        android:id="@+id/btn_filters_close"
        android:layout_width="36dp"
        android:layout_height="36dp"
        android:backgroundTint="@color/dark_blue"
        android:insetTop="1dp"
        android:insetBottom="1dp"
        app:cornerRadius="8dp"
        app:icon="@drawable/ic_close"
        app:iconGravity="textStart"
        app:iconPadding="0dp"
        app:iconTint="@color/white"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tv_filters_title"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:fontFamily="@font/mark_pro"
        android:gravity="center"
        android:text="@string/filter_options"
        android:textColor="@color/dark_blue"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="@id/btn_filters_close"
        app:layout_constraintEnd_toStartOf="@id/btn_filters_done"
        app:layout_constraintStart_toEndOf="@id/btn_filters_close"
        app:layout_constraintTop_toTopOf="@id/btn_filters_done" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/btn_filters_done"
        android:layout_width="90dp"
        android:layout_height="wrap_content"
        android:backgroundTint="@color/orange"
        android:text="@string/done"
        android:textColor="@color/white"
        app:cornerRadius="8dp"
        app:layout_constraintBottom_toBottomOf="@id/btn_filters_close"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@id/btn_filters_close" />

    <LinearLayout
        android:id="@+id/ll_filters"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:orientation="vertical"
        android:paddingVertical="15dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/btn_filters_done">

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>


